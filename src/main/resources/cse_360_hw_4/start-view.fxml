<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cse_360_hw_4.Controllers.StartController"
      stylesheets="@style.css"
      styleClass="container">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Welcome to Heart Health Imaging and Recording System" styleClass="title-label"/>

    <Button text="Patient Intake" onAction="#initLoginScene" styleClass="primary-button"/>
    <Button text="CT Scan Tech View" onAction="#initCreateScene" styleClass="primary-button"/>
    <Button text="Patient View" onAction="#initPatientInputUserScene" styleClass="primary-button"/>
</VBox>
